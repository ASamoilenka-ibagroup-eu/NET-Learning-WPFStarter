<Window x:Class="WPFStarter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Import CSV" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Click="ImportCsv_Click"/>
        <Button Content="Export to Excel" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" Width="100" Click="ExportToExcel_Click"/>
        <Button Content="Export to XML" HorizontalAlignment="Left" Margin="230,10,0,0" VerticalAlignment="Top" Width="100" Click="ExportToXml_Click"/>
        <DataGrid Name="DataGridRecords" AutoGenerateColumns="True" Margin="10,50,10,10"/>
    </Grid>
</Window>